<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Date:</b>
  <%= @post.date %>
</p>

<p>
  <% @post.subjects.each do |subject| %>
    <%= link_to subject.name, :controller => "subjects", :action => "show" %>
  <% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %>
